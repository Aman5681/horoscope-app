{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2020",
      "dom"
    ],
    "noImplicitAny": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "outDir": "./dist",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}